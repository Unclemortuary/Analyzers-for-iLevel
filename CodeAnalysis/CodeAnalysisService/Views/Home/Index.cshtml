@{ 
    ViewBag.Title = "Diagnostic Service";
}

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <style type="text/css">
        h3{
            text-align:center;
           }

        .formContainer {
            text-align: center;
            padding: 50px 0;
        }

        .userInput {
            padding-top: 5px;
            position:center;
            text-align: center;
        }

        .results {
            text-align:center;
            padding: 10px;
        }

        .textResult {
            margin: 0 auto;
            margin-top: 10px;
            margin-bottom: 10px;
            text-align: left;
            position: relative;
        }
    </style>
</head>
<body>
    <div class="row"  style="padding-top: 50px">
        <section class="col-md-4 col-md-push-4">
            @using (Html.BeginForm())
            {
                <div class="well bs-component">
                    <br />
                    <div class="row">
                        <div class="col-md-12 col-md-push-2">
                            <div class="form-group">
                                <div class="userInput">
                                    <input id="uploadFiles" type="file" accept=".cs" multiple name="upload" formenctype="multipart/form-data" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div>
                                    <div>
                                        <button id="submit">Submit and get diagnostic</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </section>
    </div>
    <div>
        <div>
            <h3 id="diagnosticHeader"></h3>
        </div>
        <div class="results">
        </div>
    </div>
    
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/Custom/DiagnosticResultLoader.js"></script>
</body>
</html>
